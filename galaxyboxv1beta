-- ========== GUI Theme Colors ==========
local baseColor = Color3.fromRGB(18, 18, 25)
local accentColor = Color3.fromRGB(85, 170, 255)
local accentColor2 = Color3.fromRGB(170, 0, 255)
local textColor = Color3.fromRGB(235, 235, 245)
local darkAccent = Color3.fromRGB(30, 30, 42)

-- ========== Create GUI ==========
local gui = Instance.new("ScreenGui", player.PlayerGui)
gui.Name = "GalaxyBoxHubV1"
gui.ResetOnSpawn = false

-- ========== Toggle Button (Top-Right) ==========
local toggleIcon = Instance.new("ImageButton")
toggleIcon.Name = "ToggleBoomboxIcon"
toggleIcon.Size = UDim2.new(0, 44, 0, 44)
toggleIcon.Position = UDim2.new(1, -64, 0, 20)
toggleIcon.AnchorPoint = Vector2.new(0, 0)
toggleIcon.BackgroundColor3 = darkAccent
toggleIcon.BorderSizePixel = 0
toggleIcon.Image = "rbxassetid://6023426915"
toggleIcon.Parent = gui
Instance.new("UICorner", toggleIcon).CornerRadius = UDim.new(0, 10)

-- Hover effect
local function buttonHover(btn)
	local hover = TweenService:Create(btn, TweenInfo.new(0.25), {BackgroundColor3 = accentColor2})
	local unhover = TweenService:Create(btn, TweenInfo.new(0.25), {BackgroundColor3 = darkAccent})
	btn.MouseEnter:Connect(function() hover:Play() end)
	btn.MouseLeave:Connect(function() unhover:Play() end)
end
buttonHover(toggleIcon)

-- ========== Main Frame ==========
