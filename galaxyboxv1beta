-- ========== Song Scroll List ==========
local scroll = Instance.new("ScrollingFrame", frame)
scroll.Position = UDim2.new(0, 15, 0, 170)
scroll.Size = UDim2.new(1, -30, 1, -180)
scroll.CanvasSize = UDim2.new(0, 0, 0, #songs * 30)
scroll.ScrollBarThickness = 6
scroll.BackgroundColor3 = darkAccent
scroll.BorderSizePixel = 0
Instance.new("UICorner", scroll).CornerRadius = UDim.new(0, 10)

local layout = Instance.new("UIListLayout", scroll)
layout.Padding = UDim.new(0, 5)
layout.SortOrder = Enum.SortOrder.LayoutOrder

for name, id in pairs(songs) do
	local button = Instance.new("TextButton", scroll)
	button.Text = name
	button.Size = UDim2.new(1, -10, 0, 28)
	button.BackgroundColor3 = baseColor
	button.TextColor3 = textColor
	button.Font = Enum.Font.Gotham
	button.TextSize = 16
	Instance.new("UICorner", button).CornerRadius = UDim.new(0, 8)

	button.MouseEnter:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.15), {BackgroundColor3 = accentColor}):Play()
	end)
	button.MouseLeave:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.15), {BackgroundColor3 = baseColor}):Play()
	end)
	button.MouseButton1Click:Connect(function()
		input.Text = tostring(id)
		statusLabel.Text = "Selected: " .. name
		statusLabel.TextColor3 = accentColor
	end)
end

-- ========== Boombox Remote Logic ==========
local boomboxRemote = findRemote()
spawn(function()
	while gui and gui.Parent do
		wait(2)
		local remote = findRemote()
		if remote ~= boomboxRemote then
			boomboxRemote = remote
			if boomboxRemote then
				statusLabel.Text = "Boombox equipped."
				statusLabel.TextColor3 = accentColor
			else
				statusLabel.Text = "Boombox not equipped."
				statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
			end
		end
	end
end)

-- ========== Play/Stop Functions ==========
local function playSong(id)
	if not boomboxRemote then
		statusLabel.Text = "No boombox equipped!"
		statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
		return
	end
	boomboxRemote:FireServer("Play", id)
	statusLabel.Text = "Playing: " .. id
	statusLabel.TextColor3 = accentColor
end

local function stopSong()
	if not boomboxRemote then
		statusLabel.Text = "No boombox equipped!"
		statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
		return
	end
	boomboxRemote:FireServer("Stop")
	statusLabel.Text = "Stopped."
	statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
end

playBtn.MouseButton1Click:Connect(function()
	local songID = input.Text
	if songs[songID] then
		playSong(songs[songID])
	elseif tonumber(songID) then
		playSong(songID)
	else
		statusLabel.Text = "Invalid Song ID"
		statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
	end
end)

stopBtn.MouseButton1Click:Connect(function()
	stopSong()
end)

-- Toggle Visibility
toggleIcon.MouseButton1Click:Connect(function()
	frame.Visible = not frame.Visible
end)
